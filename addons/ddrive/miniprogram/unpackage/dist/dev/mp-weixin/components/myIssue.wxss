.issue {
  width: 100%;
  height: 300rpx;
  background-color: #FFFFFF;
}
.issue-head {
  background-color: #ffffff;
  /* border-top: 1upx solid $borderColor;
		border-bottom: 1upx solid $borderColor; */
  /* padding: 0 25upx; */
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.issue-head-pic {
  width: 100rpx;
  height: 100rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  vertical-align: middle;
  margin-top: -50rpx;
  /* margin-right: 17upx; */
}
.issue-head-title {
  line-height: 100rpx;
  font-size: 30rpx;
  vertical-align: middle;
  /* margin-right: 35upx; */
}
.issue-head-star-box {
  display: inline-block;
}
.issue-head-star-box image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin: 14rpx;
}
.issue-head-star-box image.active {
  -webkit-animation: star_move ease-in 1 1s,star_rotate ease 1.5s infinite 1s;
          animation: star_move ease-in 1 1s,star_rotate ease 1.5s infinite 1s;
}
.issue textarea {
  width: 100%;
  height: 100rpx;
  text-align: center;
  background-color: #ffffff;
  font-size: 28rpx;
  color: #898989;
  padding: 24rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  /* line-height: 40upx */
}
.issue-btn-box {
  /* padding: 0upx 30upx; */
}
.issue-btn-box button {
  width: 100%;
  height: 80rpx;
  -webkit-border-radius: 0rpx;
          border-radius: 0rpx;
  font-size: 28rpx;
  background-color: #32C45E;
  line-height: 80rpx;
  margin-top: 55rpx;
}
