page {
  background-color: #f7f7f7;
}
.index {
  border-top: 1px solid #e6e6e6;
  padding: 20rpx 5%;
  background-color: #ffffff;
}
.input {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 26rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #e6e6e6;
}
.input .left {
  width: 20%;
}
.input .icon {
  width: 10%;
  text-align: right;
  color: #b5b5b5;
  font-size: 26rpx;
}
.input .right {
  width: 80%;
  text-align: right;
  color: #919191;
}
.input .right image {
  width: 50rpx;
  height: 50rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
}
.button {
  -webkit-border-radius: 0px;
          border-radius: 0px;
  margin-top: 20rpx;
  font-size: 32rpx;
  background-color: #ffffff;
  color: #101010;
  width: 90%;
}
.popup {
  height: 100%;
  width: 100%;
