  color: #acacac;
}
.index {
  padding: 0 10%;
}
.logo {
  margin-top: 10%;
  margin-bottom: 10%;
}
.logo .top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 60rpx;
}
.logo .top image {
  width: 60rpx;
  height: 60rpx;
}
